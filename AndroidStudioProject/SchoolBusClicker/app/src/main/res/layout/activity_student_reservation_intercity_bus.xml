<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/seat" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_seat_1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="1"
                    android:textSize="24dp"
                    android:background="@drawable/bus_seat"/>

                <Button
                    android:id="@+id/btn_seat_5"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="5"
                    android:textSize="24dp"
                    android:background="@drawable/bus_seat"/>

                <Button
                    android:id="@+id/btn_seat_9"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="9"
                    android:textSize="24dp"
                    android:background="@drawable/bus_seat"/>

                <Button
                    android:id="@+id/btn_seat_13"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="13"
                    android:textSize="24dp"
                    android:background="@drawable/bus_seat"/>

                <Button
                    android:id="@+id/btn_seat_17"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="17"
                    android:textSize="24dp"
                    android:background="@drawable/bus_seat"/>

                <Button
                    android:id="@+id/btn_seat_21"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="21"
                    android:textSize="24dp"
                    android:background="@drawable/bus_seat"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:orientation="vertical"
                >

                <Button
                    android:id="@+id/btn_seat_2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="2"
                    android:textSize="24dp"
                    android:background="@drawable/bus_seat"/>

                <Button
                    android:id="@+id/btn_seat_6"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="6"
                    android:textSize="24dp"
                    android:background="@drawable/bus_seat"/>

                <Button
                    android:id="@+id/btn_seat_10"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="10"
                    android:textSize="24dp"
                    android:background="@drawable/bus_seat"/>

                <Button
                    android:id="@+id/btn_seat_14"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="14"
                    android:textSize="24dp"
                    android:background="@drawable/bus_seat"/>

                <Button
                    android:id="@+id/btn_seat_18"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="18"
                    android:textSize="24dp"
                    android:background="@drawable/bus_seat"/>

                <Button
                    android:id="@+id/btn_seat_22"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="22"
                    android:textSize="24dp"
                    android:background="@drawable/bus_seat"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_seat_3"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="3"
                    android:textSize="24dp"
                    android:background="@drawable/bus_seat"/>

                <Button
                    android:id="@+id/btn_seat_7"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="7"
                    android:textSize="24dp"
                    android:background="@drawable/bus_seat"/>

                <Button
                    android:id="@+id/btn_seat_11"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@drawable/bus_seat"
                    android:text="11"
                    android:textSize="24dp" />

                <Button
                    android:id="@+id/btn_seat_15"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="15"
                    android:textSize="24dp"
                    android:background="@drawable/bus_seat"/>

                <Button
                    android:id="@+id/btn_seat_19"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="19"
                    android:textSize="24dp"
                    android:background="@drawable/bus_seat"/>

                <Button
                    android:id="@+id/btn_seat_23"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="23"
                    android:textSize="24dp"
                    android:background="@drawable/bus_seat"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_seat_4"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="4"
                    android:textSize="24dp"
                    android:background="@drawable/bus_seat"/>

                <Button
                    android:id="@+id/btn_seat_8"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="8"
                    android:textSize="24dp"
                    android:background="@drawable/bus_seat"/>

                <Button
                    android:id="@+id/btn_seat_12"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="12"
                    android:textSize="24dp"
                    android:background="@drawable/bus_seat"/>

                <Button
                    android:id="@+id/btn_seat_16"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="16"
                    android:textSize="24dp"
                    android:background="@drawable/bus_seat"/>

                <Button
                    android:id="@+id/btn_seat_20"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="20"
                    android:textSize="24dp"
                    android:background="@drawable/bus_seat"/>

                <Button
                    android:id="@+id/btn_seat_24"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:text="24"
                    android:textSize="24dp"
                    android:background="@drawable/bus_seat"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.2"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/btn_OK"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="26dp"
            android:text="선택" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textSize="26dp"
            android:text="취소" />


    </LinearLayout>

</LinearLayout>